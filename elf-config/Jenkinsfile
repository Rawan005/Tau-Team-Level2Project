pipeline {
      agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kubectl
    image: bryandollery/terraform-packer-aws-alpine
    command:
    - cat
    tty: true
  - name: helm
    image: alpine/helm
    command:
    - cat
    tty: true
"""
    }
  }
  environment {
    TOKEN=credentials('45ee2e0a-4e93-4d96-882b-8ec5749ab5a5')
  }

   stages {
      stage("init") {
          steps {
              container('kubectl') {
                   sh 'make init'
              }
          }
      }
        
    }
}
