pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
metadata:
  labels:
    service_name: department-service
    service_type: REST
spec:
  containers:
  - name: dnd
    image: docker:latest
    command: 
    - cat
    tty: true
    volumeMounts: 
    - mountPath: /var/run/docker.sock
      name: docker-sock
  - name: kubectl
    image: bryandollery/terraform-packer-aws-alpine
    command:
    - cat
    tty: true
  volumes:
  - name: docker-sock
    hostPath:
      path: /var/run/docker.sock  
      type: Socket
"""
    }
  }
  environment {
    TOKEN=credentials('4ff0bfed-4fc0-4f54-b80e-3c0569b79790')
  }

   stages {
      stage("init") {
          steps {
                container('kubectl') {
                   sh 'git clone https://github.com/KnowledgeHut-AWS/labs'
                   sh 'cd labs'
                   sh 'make elf'
              }
          }
      }
        
    }
}
